if BOARD_BMD100_NRF5340_CPUAPP || BOARD_BMD100_NRF5340_CPUAPP_NS

config BOARD_SERIAL_BACKEND_CDC_ACM
	bool "USB CDC ACM"
	default y

config DOMAIN_CPUNET_BOARD
	string
	default "bmd100/nrf5340/cpunet"
	depends on BOARD_ENABLE_CPUNET
	help
	  The board which will be used for CPUNET domain when creating a multi
	  image application where one or more images should be located on
	  another board. For example hci_ipc on the nRF5340_cpunet for
	  Bluetooth applications.

endif #  BOARD_BMD100_NRF5340_CPUAPP || BOARD_BMD100_NRF5340_CPUAPP_NS

config DOMAIN_CPUAPP_BOARD
	string
	default "bmd100/nrf5340/cpuapp"
	depends on BOARD_BMD100_NRF5340_CPUNET
	help
	  The board which will be used for CPUAPP domain when creating a multi
	  image application where one or more images should be located on
	  another board.
